<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/custom_keyboard_col">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#2d33ac" />
            <corners android:radius="@dimen/_10dp" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#2d33ac"
                android:startColor="#2d33ac"
                android:type="linear" />
            <!--            <stroke android:color="#2d33ac" android:width="1dp"/>-->
            <corners android:radius="@dimen/_10dp" />
        </shape>
    </item>
</ripple>
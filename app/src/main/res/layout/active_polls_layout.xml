<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5dp"
    android:elevation="@dimen/_10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="@dimen/_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_gravity="start"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginStart="@dimen/_10dp"
                android:id="@+id/userImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_user" />
            <TextView

                android:inputType="textCapSentences"
                android:id="@+id/users_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gopal Meena"
                android:textColor="@color/black"
                android:textFontWeight="@integer/m3_sys_motion_duration_400"
                android:layout_margin="@dimen/_10dp"
                tools:ignore="TextViewEdits" />

        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_5dp"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:fontFamily="@font/roboto_bold"
            android:id="@+id/askedQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is Programing Language"
            android:textColor="@color/black"
            android:textFontWeight="@integer/m3_sys_motion_duration_400"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="@dimen/_10dp"/>
        <TextView
            android:id="@+id/time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 Days Ago"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="@dimen/_10dp"/>
        <LinearLayout
            android:id="@+id/mainLayout_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10dp"
            android:orientation="vertical">

            <RadioGroup
                android:visibility="gone"
                android:id="@+id/RadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </RadioGroup>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"

            android:paddingEnd="@dimen/_5dp"
            android:paddingStart="@dimen/_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_vote"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Votes 25"
                android:textColor="@color/black"
                android:textFontWeight="@integer/m3_sys_motion_duration_400"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="@dimen/_10dp"/>

            <LinearLayout
                android:paddingEnd="@dimen/_10dp"
                android:layout_gravity="center"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="2dp"
                    android:id="@+id/comment"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:layout_height="40dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_color_comment"
                    app:tint="@color/black" />
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/like_button"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:src="@drawable/like" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>